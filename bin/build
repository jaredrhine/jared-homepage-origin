#!/bin/bash

# This is the cheap-and-easy way to handle the inclusion of files
# from outside the Docker build context. That is, copy them here.

set -xe

cd /home/jared/work/home/jared-homepage-origin
rm -rf site
mkdir site
cp -a /home/jared/work/home/jared-homepage-vue/homeapp/dist/* site/
flyctl deploy
